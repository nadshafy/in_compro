generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  name         String?
  email        String    @unique
  passwordHash String
  role         Role      @default(ADMIN)
  insights     Insight[] @relation("UserInsights")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Insight {
  id       String          @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  slug     String          @unique
  excerpt  String
  content  String
  coverImage String? 
  category InsightCategory
  status   InsightStatus   @default(DRAFT)

  authorId String   @db.ObjectId
  author   User     @relation("UserInsights", fields: [authorId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum InsightCategory {
  PRESS_RELEASE
  BLOG
  NEWS
  UPDATE
}

enum InsightStatus {
  DRAFT
  PUBLISHED
}

enum Role {
  ADMIN
  EDITOR
}
